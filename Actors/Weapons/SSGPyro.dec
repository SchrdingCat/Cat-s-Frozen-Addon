ACTOR SSGPyro : SSG
{
	Weapon.AmmoType1 "PyroAmmoShell"
	Weapon.AmmoType2 "PyroSSGAmmo"
	Weapon.SelectionOrder 400
	+WEAPON.CHEATNOTWEAPON
	States
	{
	
	SelectFromOtherShell:
		TNT1 A 0 A_Giveinventory("GoSpecial",1)
		TNT1 A 0 A_TakeInventory("SSG", 1,AAPTR_PLAYER1)
		TNT1 A 0 A_TakeInventory("SSGCryo", 1,AAPTR_PLAYER1)
		TNT1 A 0 A_TakeInventory("SSGGold", 1,AAPTR_PLAYER1)
		TNT1 A 0 A_GiveInventory("TokenCleaner")
		TNT1 A 0 A_SetCrosshair( CallACS("GetCrosshair", 1) )
		TNT1 AAAAAAAA 0 A_Raise
		SHT2 A 0 A_Takeinventory("SwitchShells",1)
		TNT1 A 0 A_PlaySound("SSG/Draw", 5)
		"####" AAAAAAA 0 A_Raise
		SHT2 A 0 A_JumpIfInventory("HasNormalSSG", 1, "SwitchUnloadNormal")
		SHT2 A 0 A_JumpIfInventory("HasCryoSSG", 1, "SwitchUnloadCryo")
		SHT2 A 0 A_JumpIfInventory("HasGoldSSG", 1, "SwitchUnloadGold")
	SwitchUnloadNormal:
		TNT1 AAAAAA 0
		TNT1 A 0 A_JumpIfInventory("SSGAmmo",1,3)
		Goto RemoveShellsAnim
		TNT1 AAAA 0
		TNT1 A 0 A_Takeinventory("SSGAmmo",1)
		SHT2 A 0 A_Takeinventory("SSGAlt",1)
		SHTZ A 0 A_TakeInventory("SSGLoaded",1)
		TNT1 A 0 A_Giveinventory("AmmoShell",1)
		Goto SwitchUnloadNormal
	SwitchUnloadCryo:
		TNT1 AAAAAA 0
		TNT1 A 0 A_JumpIfInventory("CryoSSGAmmo",1,3)
		Goto RemoveShellsAnim
		TNT1 AAAA 0
		TNT1 A 0 A_Takeinventory("CryoSSGAmmo",1)
		SHT2 A 0 A_Takeinventory("SSGAlt",1)
		SHTZ A 0 A_TakeInventory("SSGLoaded",1)
		TNT1 A 0 A_Giveinventory("CryoAmmoShell",1)
		Goto SwitchUnloadCryo
	SwitchUnloadGold:
		TNT1 AAAAAA 0
		TNT1 A 0 A_JumpIfInventory("GoldSSGAmmo",1,3)
		Goto RemoveShellsAnim
		TNT1 AAAA 0
		TNT1 A 0 A_Takeinventory("GoldSSGAmmo",1)
		SHT2 A 0 A_Takeinventory("SSGAlt",1)
		SHTZ A 0 A_TakeInventory("SSGLoaded",1)
		TNT1 A 0 A_Giveinventory("GoldAmmoShell",1)
		Goto SwitchUnloadGold
	
	RemoveShellsAnim:
		TNT1 AAA 0
		SHT2 A 0 A_Takeinventory("Zoomed",1)
		SHT2 A 0 A_GiveInventory ("Pumping", 1)
		SHT2 A 0 A_Takeinventory("Unloading",1)
		SHTZ AAB 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHTZ C 1 A_PlaySound("SSG/Lever2", 5)
		SHTZ DEFGHIIIHJ 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHT7 K 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHTZ L 2 A_PlaySound("weapons/sshoto", 5)
		SHT2 A 0 A_GiveInventory("HasUnloadedSSG", 1)
		SHTZ MNN 3 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHTZ O 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHT2 A 0 A_PlaySound("weapons/sshotc", 5)
		//SHZ2 BCDEFFGHI 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		//SHZ2 J 1 A_PlaySound("SSG/Lever1", 5)
		//SHTZ BAA 1
		SHTZ A 0 A_TakeInventory("Reloading",1)		
		SHTZ A 0 A_TakeInventory("Unloading",1)
		Goto SwitchReload
		
	SwitchReload:
		VSHZ A 0 A_JumpIfInventory("IsPlayingAsPurist", 1,"Ready")
		SHT2 A 0 A_TakeInventory("SSGAlt", 1)
		//SHTZ AA 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		//SHZ3 G 1
		//SHZ3 H 1 A_PlaySound("SSG/Lever2", 5)
		//SHZ3 IJ 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		//SHZ9 A 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHT2 A 0 A_GiveInventory ("Pumping", 1)
		//SHT2 A 0 A_PlaySound("weapons/sshoto", 5)
		SHT2 A 0 A_JumpIfInventory("HasUnloadedSSG", 1, 3)
		SHTZ A 0 A_FireCustomMissile("PyroSSGCaseSpawner",0,0,-10, -20)
		TNT1 A 0 A_GunFlash("ReloadSmoke2",GFF_NOEXTCHANGE)
		SHTZ P 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		S8TZ QR 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		S8TZ S 2 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		S8TZ TUV 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM) //removed u frame
		SHT2 A 0 A_TakeInventory("HasUnloadedSSG", 1)
		SHZ2 A 0 A_playsound("weapons/sshotl", 5)
		SHTZ A 0 A_GiveInventory("PyroSSGAmmo", 2)
		SHTZ A 0 A_GiveInventory("SSGLoaded",1)
		SHT2 A 0 A_TakeInventory("HasCryoSSG", 1)
		SHT2 A 0 A_TakeInventory("HasGoldSSG", 1)
		SHT2 A 0 A_TakeInventory("HasNormalSSG", 1)
		SHT2 A 0 A_GiveInventory("HasPyroSSG", 1)
		SHTZ A 0 A_JumpIfInventory("NoReloading",1,2)
		SHTZ A 0 A_TakeInventory("PyroAmmoShell", 2,TIF_NOTAKEINFINITE)
		SHTZ WXYZ 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		TNT1 A 3 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHTZ Z 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHT2 A 0 A_PlaySound("weapons/sshotc", 5)
		SHZ2 ABCDEFFFGHI 1 A_WeaponReady(WRF_NOBOB|WRF_NOFIRE|WRF_ALLOWZOOM)
		SHZ2 J 1 A_PlaySound("SSG/Lever1")
		SHTZ A 0 A_TakeInventory("Reloading",1)
		SHTZ B 1
		SHTZ AA 1 A_ReFire
		Goto Ready
		
	Select:
		TNT1 A 0 A_JumpIfInventory("SwitchShells", 1, "SelectFromOtherShell")
		TNT1 A 0 A_Giveinventory("GoSpecial",1)
		TNT1 A 0 A_GiveInventory("TokenCleaner")
		SHT2 A 0 A_Giveinventory("SSGSelected",1)
		TNT1 A 0 A_SetCrosshair( CallACS("GetCrosshair", 4) )
		SHT2 A 0 A_JumpIfInventory("IsRunning", 1, "StartSprint")
		SHT2 A 0 A_GunFlash
		VSSG A 0 A_JumpIfInventory("IsPlayingAsPurist", 1, 3)
		TNT1 A 0 A_JumpIfInventory("NoAutoReload", 1, 5)
		SHT2 A 0 A_JumpIfInventory("PyroSSGAmmo", 1, 4)
		SHT2 A 0 A_JumpIfInventory("SSGLoaded", 1, 3)
		TNT1 AA 0 A_WeaponReady(WRF_NOFIRE)
		Goto RaiseReloading
		TNT1 AAA 0
		
	ResumeNormalRaise:
		TNT1 A 0 A_GiveInventory ("Pumping", 1)
		VSSG A 0 A_JumpIfInventory("IsPlayingAsPurist", 1,"RaiseNoAmmo")		
		TNT1 A 0 A_JumpIfInventory("PyroSSGAmmo",1,1)
		Goto RaiseNoAmmo
		SHZ2 A 1 Offset(25, 56)
		SHZ2 A 1 Offset(2, 33)
		//Goto FinishNormalRaise
		SHT2 A 0 A_PlaySound("weapons/sshotc", 5)
		SHZ2 ABCDGIJ 1 A_WeaponReady(WRF_NOBOB|WRF_ALLOWZOOM)
		SHZ2 A 0 A_PlaySound("SSG/Lever1", 5)
		SHTZ BA 1 A_WeaponReady(WRF_NOBOB|WRF_ALLOWZOOM)
		Goto Ready

	RaiseNoAmmo:	
		SHT2 A 0 A_PlaySound("SSG/Draw", 5)
		VSSG A 0 A_JumpIfInventory("IsPlayingAsPurist", 1,"SelectPurist")
		SHT2 KLMN 1 A_WeaponReady(WRF_NOFIRE)
		Goto Ready
		
	SelectAnimation:
	Ready:
	Ready3:
		VSSG A 0 A_JumpIfInventory("IsPlayingAsPurist", 1,2)
		SHT2 A 0
		"####" A 1 A_WeaponReady//(WRF_ALLOWRELOAD)
		SHTN A 0 A_JumpIfInventory("ExecuteDownedEnemy", 1, "DoExecution")
		SHT2 A 0 A_JumpIfInventory("Kicking",1,"DoKick")
		SHT2 A 0 A_JumpIfInventory("Taunting",1,"Taunt")
		SHT2 A 0 A_JumpIfInventory("Salute1", 1, "Salute")
		SHT2 A 0 A_JumpIfInventory("Salute2", 1, "Salute")
		SHT2 A 0 A_JumpIfInventory("Reloading",1,"Reload")
		SHT2 A 0 A_JumpIfInventory("Unloading",1,"Unload")
		SHT2 A 0 A_JumpIfInventory("StartDualWield",1,"WeapSpecial")
		SHT2 A 0 A_JumpIfInventory("TossGrenade",1,"TossGrenade")
		SHT2 A 0 A_JumpIfInventory("IsRunning",1,"StartSprint")
		Loop
	
	Deselect:
		SHT2 A 0 A_Takeinventory("Zoomed",1)
		TNT1 A 0 A_JumpIfInventory("SwitchShells", 1, "DeselectInstant")
		SHT2 A 0 A_ZoomFactor(1.0)
		TNT1 A 0 A_tAKEINVENTORY("HoldInspect",1)
		SHT2 A 0 A_TakeInventory("TossGrenade", 1)
		VSSG A 0 A_JumpIfInventory("IsPlayingAsPurist", 1,"DeselectPurist")
		SHT2 OPQR 1
		TNT1 AAAAAAAAAAAAAAAAAA 0 A_Lower
		TNT1 A 1 A_Lower
		Wait

	Fire:
		VSSG A 0 A_JumpIfInventory("IsPlayingAsPurist", 1,2)
		SHT2 A 0
		"####" A 0 A_TakeInventory("Reloading",1)
		"####" A 0 A_JumpIfInventory("PyroSSGAmmo", 2, 3)
		"####" A 0 A_JumpIfInventory("PyroSSGAmmo",1,"AltFire")
		"####" A 0 A_JumpIfInventory("SSGAlt",1,"AltFire")
		Goto NoAmmo
		"####" A 0 A_TakeInventory("PyroSSGAmmo", 2)
		"####" A 0 A_JumpIfInventory("NoReloading",1,"NoReload")
		Goto ResumeFireFrame

	NoReload:
		"####" A 0 A_JumpIfInventory("PyroAmmoShell", 2, 3)
		"####" A 0 A_JumpIfInventory("PyroAmmoShell", 1, "NoReload2")
		Goto NoAmmo
		"####" AA 0 
		"####" A 0 A_TakeInventory("PyroAmmoShell", 2,TIF_NOTAKEINFINITE)
	ResumeFireFrame:
		"####" A 0
		"####" A 0 A_TakeInventory("SSGAlt",1)
		"####" A 0 A_AlertMonsters
		"####" A 0 A_ZoomFactor(1.6)
		"####" A 0 A_JumpIfInventory("PowerStrength", 1, 2)
		"####" A 0 A_Recoil(2)
		"####" A 0
		"####" A 0 A_FireCustomMissile("DistantFireSoundSSG", random(-1,1), 0, 0, -12, 0, random(-1,1))
		"####" A 0 A_firebullets (0,0,1,40,"shotpuff",FBF_NORANDOM,300)
		"####" A 0 BRIGHT A_playsound("SSG/Fire", 1)
		"####" AAAAAAAAAAA 0 A_FireCustomMissile("DecorativeTracer", random(-10,10), 0, 0, -12, 0, random(-5,5))
		"####" AA 0 BRIGHT A_FireCustomMissile("TinyFlameTrails", random(-19,19), 0, 0, -3, 0, random(-9,9))
		"####" AAAAAAAAAAAAAAAAAAAA 0 BRIGHT A_FireCustomMissile("ShotgunParticles", random(-19,19), 0, -1, 0, 0, random(-9,9))
		"####" AAAAAAAAAAAAA 0 BRIGHT A_FireCustomMissile("ShotgunParticles2", random(-19,19), 0, -1, 0, 0, random(-9,9))
		"####" A 0 A_SpawnItemEx("PlayerMuzzle2",30,5,27)
		"####" A 0 A_FireBullets (10, 1, 12, 14, "PyroShotgunPuff", FBF_NORANDOM)
		"####" A 0 A_FireBullets (6, 3, 12, 14, "PyroShotgunPuff", FBF_NORANDOM)
		"####" A 0 A_FireBullets (6, 3, 12, 12, "ShotgunPuff2", FBF_NORANDOM)
		SHT2 A 0 A_JumpIfInventory("IsNOTTacticalClass", 1, 2)
		"####" A 0 A_SetPitch(pitch-20)
		"####" AA 0
		S8T2 BC 1 BRIGHT A_SetPitch(pitch-0.5)
		"####" "#" 0 A_Quake(4,5,0,12,"")
		SHT2 A 0 A_SetPitch(pitch-11)
		"####" A 0 A_ZoomFactor(1.00)
		"####" A 0 A_TakeInventory("SSGLoaded",1)
		"####" A 0 A_TakeInventory("Reloading",1)
		"####" DEEF 1 A_SetPitch(pitch+2)
		"####" GHIJ 1 A_SetPitch(pitch+1)
		"####" A 0 A_JumpIfInventory("IsNOTTacticalClass", 1, 15)//Tactical Mode takes more time
		"####" AAAAAAAAAA 1 A_SetPitch(pitch+0.5)
		"####" AA 1 A_WeaponReady(WRF_NOFIRE | WRF_NOBOB)
		"####" AAA 1 A_JumpIfInventory("Reloading",1,"Reload")
		"####" A 0 A_JumpIfInventory("Kicking",1,"DoKick")
		"####" A 0 A_JumpIfInventory("Taunting",1,"Taunt")
		"####" A 0 A_JumpIfInventory("Salute1", 1, "Salute")
		"####" A 0 A_JumpIfInventory("Salute2", 1, "Salute")
		"####" A 0 A_JumpIfInventory("TossGrenade",1,"TossGrenade")
		"####" A 0 A_JumpIfInventory("IsRunning",1,"StartSprint")
		"####" A 1 A_WeaponReady(WRF_NOFIRE | WRF_NOBOB)
		"####" A 0 A_JumpIfInventory("IsPlayingAsPurist", 1, 2)
		"####" A 0 A_JumpIfInventory("NoAutoReload", 1, "Ready")
		"####" AA 0
		"####" A 0 A_JumpIfInventory("PyroAmmoShell",1,"Reload")
		Goto Ready

	ReloadSmoke:
		SHZ3 LMNOP 1
		stop

	ReloadSmoke2:
		SHZ3 QRSTU 1
		stop

	AltFire:
		SHT2 A 0 A_TakeInventory("Reloading",1)
		VSHZ A 0 A_JumpIfInventory("IsPlayingAsPurist", 1,"PuristWarning")
		SHT2 A 0 A_JumpIfInventory("PyroSSGAmmo", 1, 2)
		Goto NoAmmo
		SHT2 AA 0 
		SHT2 A 0 A_JumpIfInventory("NoReloading",1,"NoReload2")
		SHT2 A 0 A_JumpIfInventory("PyroSSGAmmo",2,"ResumeFire2Frame")
		Goto AltFire2

	NoReload2:
		SHT2 A 0 A_JumpIfInventory("PyroAmmoShell", 1, 2)
		Goto NoAmmo
		SHT2 AA 0 
		SHT2 A 0 A_TakeInventory("PyroAmmoShell", 1,TIF_NOTAKEINFINITE)
	ResumeFire2Frame:
		TNT1 AAAAA 0
		SHT2 A 0 A_JumpIfInventory("SSGAlt",1,"AltFire2")
		SHT2 A 0 A_TakeInventory("PyroSSGAmmo", 1)
		SHT2 A 0 A_PlaySound("SSG/AltFire", 1)
		SHT2 A 0 A_SpawnItemEx("PlayerMuzzle1",30,5,30)
		SHT2 A 0 A_FireCustomMissile("DistantFireSoundShotgun", random(-1,1), 0, 0, -12, 0, random(-1,1))
		SHT2 A 0 A_ALertMonsters
		"####" "#" 0 A_Quake(3,4,0,12,"")
		SHT2 A 0 A_TakeInventory("SSGLoaded",1)
		SHT2 A 0 offset(-1,32) A_GiveInventory("SSGAlt",1)
		"####" A 0 A_firebullets (0,0,1,20,"shotpuff",FBF_NORANDOM,300)
		"####" A 0 BRIGHT A_playsound("SSG/Fire", 1)
		"####" AAAAA 0 A_FireCustomMissile("DecorativeTracer", random(-5,5), 0, 0, -12, 0, random(-5,5))
		"####" A 0 BRIGHT A_FireCustomMissile("TinyFlameTrails", random(1,12), 0, 0, -3, 0, random(-9,9))
		"####" AAAAAAAAAA 0 BRIGHT A_FireCustomMissile("ShotgunParticles", random(1,12), 0, -1, 0, 0, random(-9,9))
		"####" AAAAAA 0 BRIGHT A_FireCustomMissile("ShotgunParticles2", random(1,12), 0, -1, 0, 0, random(-9,9))
		"####" A 0 A_SpawnItemEx("PlayerMuzzle2",30,5,27)
		"####" A 0 A_FireBullets (10, 1, 12, 14, "PyroShotgunPuff", FBF_NORANDOM)
		"####" A 0 A_FireBullets (10, 1, 6, 13, "ShotgunPuff2", FBF_NORANDOM)
		S8T2 X 1 BRIGHT
		SHT2 A 0 A_JumpIfInventory("IsNOTTacticalClass", 1, 2)
		SHT2 A 0 A_SetPitch(pitch-7)
		SHT2 A 0
		SHT2 A 0 A_SetPitch(-5.0 + pitch)
		SHT2 GHIJA 1 A_SetPitch(+1.0 + pitch)
		SHT2 A 0
		Goto Ready
		
		
	AltFire2:
		SHT2 A 0 A_TakeInventory("PyroSSGAmmo", 1)
		SHT2 A 0 A_PlaySound("SSG/AltFire", 1)
		SHT2 A 0 A_SpawnItemEx("PlayerMuzzle1",30,5,30)
		SHT2 A 0 A_FireCustomMissile("DistantFireSoundShotgun", random(-1,1), 0, 0, -12, 0, random(-1,1))
		SHT2 A 0 A_ALertMonsters
		"####" "#" 0 A_Quake(3,4,0,12,"")
		SHT2 A 0 A_TakeInventory("SSGLoaded",1)
		SHT2 A 0 offset(1,32) A_TakeInventory("SSGAlt",1)
		"####" A 0 A_firebullets (0,0,1,20,"shotpuff",FBF_NORANDOM,300)
		"####" A 0 BRIGHT A_playsound("SSG/Fire", 1)
		"####" AAAAA 0 A_FireCustomMissile("DecorativeTracer", random(-5,5), 0, 0, -12, 0, random(-5,5))
		"####" A 0 BRIGHT A_FireCustomMissile("TinyFlameTrails", random(-1,-12), 0, 0, 0, -3, random(-9,9))
		"####" AAAAAAAAAA 0 BRIGHT A_FireCustomMissile("ShotgunParticles", random(-1,-12), 0, -1, 0, 0, random(-9,9))
		"####" AAAAAA 0 BRIGHT A_FireCustomMissile("ShotgunParticles2", random(-1,-12), 0, -1, 0, 0, random(-9,9))
		"####" A 0 A_SpawnItemEx("PlayerMuzzle2",30,5,27)
		"####" A 0 A_FireBullets (10, 1, 12, 14, "PyroShotgunPuff", FBF_NORANDOM)
		"####" A 0 A_FireBullets (10, 1, 6, 13, "ShotgunPuff2", FBF_NORANDOM)
		S8T2 Y 1 BRIGHT 
		SHT2 A 0 A_JumpIfInventory("IsNOTTacticalClass", 1, 2)
		SHT2 A 0 A_SetPitch(pitch-7)
		SHT2 A 0
		SHT2 A 0 A_SetPitch(-5.0 + pitch)
		SHT2 GHIJA 1 A_SetPitch(+1.0 + pitch)
		SHT2 A 0 A_JumpIfInventory("NoAutoReload", 1, 2)
		Goto Reload
		SHT2 AA 0
		Goto NoAmmo//Ready

	StartSprint:
		SHT2 A 0 A_JumpIfInventory("UsedStamina", 40, "StopSprintTired")
		SHT2 STUV 1 A_WeaponReady(WRF_NOFIRE)
		SHT2 A 0 A_Takeinventory("Zoomed",1)
		SHT2 A 0 A_Takeinventory("ADSmode",1)
		SHT2 A 0 A_ZoomFactor(1.0)	
	Sprinting:
		SHT2 V 0 offset(-9,32)
		//SHT2 A 0 offset(-9,32) A_JumpIfInventory("IsStandingStill", 1, "Ready3")
		SHT2 A 0 offset(-9,32) A_JumpIfInventory("UsedStamina", 0, "StopSprint")
		PLAY A 0 offset(-9,32) ACS_ExecuteAlways(852, 0, 0, 0, 0)//Makes player faster.
		SHT2 A 0 offset(-9,32) A_JumpIfInventory("PowerStrength", 1, 2)
		SHT2 A 0 offset(-9,32) A_GiveInventory("UsedStamina", 6)
		SHT2 A 0 offset(-9,32)
		SHT2 V 1 offset(-9,34) A_SetPitch(pitch -0.5)
		SHT2 V 1 offset(-6,36) A_SetPitch(pitch -0.5)
		SHT2 V 1 offset(-3,38) A_SetPitch(pitch -0.5)
		SHT2 V 1 offset(0,38) A_SetPitch(pitch -0.5)
		SHT2 V 1 offset(3,36) A_SetPitch(pitch -0.5)
		SHT2 V 1 offset(6,34) A_SetPitch(pitch -0.5)
		SHT2 V 1 offset(9,32) A_SetPitch(pitch -0.5)
		SHT2 A 0 offset(9,32) A_WeaponReady(WRF_NOBOB)
		SHT2 A 0 A_JumpIfInventory("Kicking",1,"DoKick")
		SHT2 A 0 A_JumpIfInventory("Taunting",1,"Taunt")
		SHT2 A 0 A_JumpIfInventory("Reloading",1,"Reload")
		SHT2 A 0 offset(-9,32) A_GiveInventory("UsedStamina", 6)
		SHT2 A 0 offset(9,33) A_SpawnItemEx("FootStep", 0, 0, 2, 0, 0, -4)
		SHT2 V 1 offset(9,34) A_SetPitch(pitch +0.5)
		SHT2 V 1 offset(6,36) A_SetPitch(pitch +0.5)
		SHT2 V 1 offset(3,38) A_SetPitch(pitch +0.5)
		SHT2 V 1 offset(0,38) A_SetPitch(pitch +0.5)
		SHT2 V 1 offset(-3,36) A_SetPitch(pitch +0.5)
		SHT2 V 1 offset(-6,34) A_SetPitch(pitch +0.5)
		SHT2 V 1 offset(-9,32) A_SetPitch(pitch +0.5)
		SHT2 A 0 offset(-9,32) A_WeaponReady(WRF_NOBOB)
		SHT2 A 0 offset(-9,32) A_JumpIfInventory("IsRunning", 1, "Sprinting")
		Goto StopSprint

	StopSprint:
		SHT2 VUTS 1
		SHT2 A 0 A_JumpIfInventory("UsedStamina", 60, "StopSprintTired")
		PLAY A 0 ACS_ExecuteAlways(853, 0, 0, 0, 0)//Makes player slower.
		Goto Ready
	
	Reload:
		"####" A 0 A_TakeInventory("Reloading",1)
		VSHZ A 0 A_JumpIfInventory("IsPlayingAsPurist", 1,3)
		SHTZ A 0 A_JumpIfInventory("HoldInspect",1,"Inspect2")
		"####" A 0 A_JumpIfInventory("PyroSSGAmmo", 2, "Inspect")
		"####" A 0 A_JumpIfInventory("SSGLoaded", 1, "Ready")
		"####" A 0 A_JumpIfInventory("PyroAmmoShell", 1, 1)//Check if has any ammo left to reload
		Goto Ready


ACTOR BloodSampleREDPickup : CustomInventory
{

	//+INVENTORY.ALWAYSPICKUP
	+FORCEXYBILLBOARD
	Inventory.PickupMessage "You've got a blood sample to give to the scientist"
	Inventory.PickupSound "FLECH4"
	Tag "Blood Sample"
	States
	{
	Spawn:
		BL0S AAABBBCCC 2 Bright 
		Loop

	Pickup:
		TNT1 A 0
		TNT1 A 0 A_JumpIfInventory("BloodSampleRED", 5, "Spawn")
		TNT1 AAAAAAAAAAAAA 0 A_CustomMissile ("ShinnySmoke", 0, 0, random (0, 360), 2, random (0, 360))
		TNT1 A 0 A_GiveInventory("BloodSampleRED", 1)
		Stop
	}
}
